<!-- 提示框 -->
<div id="newroom" class="modal fade bs-example-modal-sm" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">创建房间</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="roomTitle">房间标题</label>
                        <input type="text" class="form-control" id="roomTitle" placeholder="请输入房间标题">
                    </div>
                    <div class="form-group">
                        <label for="roomPwd">房间密码</label>
                        <input type="text" class="form-control" id="roomPwd" placeholder="请设置房间密码，留空则无密码">
                    </div>
                    <div class="form-group">
                        <label for="roomPic">封面图片</label>
                        <input type="text" class="form-control" id="roomPic" placeholder="请设置房间图片地址，留空则使用默认图片">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="ret">重置</button>
                <button type="button" class="btn btn-info" id="sub">创建</button>
            </div>
        </div>
    </div>
</div>